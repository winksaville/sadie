[binaries]
c = 'x86_64-elf-gcc'
cpp = 'x86_64-elf-g++'
ar = 'x86_64-elf-ar'
ld = 'x86_64-elf-ld'
strip = 'x86_64-elf-strip'

[properties]
has_function_printf = false
c_args = ['-ffreestanding', '-nostdlib', '-nostartfiles', '-nodefaultlibs', '-mno-red-zone']
c_link_args = ['-ffreestanding', '-nostdlib', '-nostartfiles', '-nodefaultlibs', '-mno-red-zone']

[host_machine]
system = 'qemu'
cpu = 'x86_64'
cpu_family = 'x86'
endian = 'little'

[target_machine]
system = 'qemu'
cpu = 'x86_64'
cpu_family = 'x86'
endian = 'little'

